@model Contrib.KeepAlive.Models.KeepAliveSettingsPartRecord
@using Orchard.Utility.Extensions;
@using Contrib.KeepAlive.Models;

<fieldset>
    <legend>@T("Keep Alive")</legend>
    <div>
        @Html.EditorFor(m => m.Enabled)
        <label class="forcheckbox" for="@Html.FieldIdFor(m => m.Enabled)">@T("Enable keep alive behavior")</label>
        @Html.ValidationMessage("Enabled", "*")
    </div>
    <div data-controllerid="@Html.FieldIdFor(m => m.Enabled)">
        <label for="@Html.FieldIdFor(m => m.Url)">@T("Url to request from this server")</label>
        @Html.TextBoxFor(m => m.Url, new { @class = "textMedium" }) /keepalive
        @Html.ValidationMessage("Url", "*")
        <span class="hint">@T("e.g., http://localhost:30320/orchardlocal/, http://www.yourdomain.com")</span>
        <span class="hint">@T("Depending on your hoster's network configuration, you might not be able to use the fully qualified name from within the network.")</span>
    </div>
</fieldset>